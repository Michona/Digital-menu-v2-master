<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_cardtoedge"
        android:layout_marginLeft="@dimen/margin_cardtoedge"
        android:layout_marginRight="@dimen/margin_cardtoedge"
        android:layout_marginStart="@dimen/margin_cardtoedge"
        android:layout_marginTop="@dimen/margin_cardtoedge"
        android:orientation="vertical">

        <com.example.terz99.digitalmenuv2.ThreeTwoImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_margin"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size"
                    tools:text="Name" />

                <TextView

                    android:id="@+id/price_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/regular_margin"
                    android:layout_marginLeft="@dimen/regular_margin"
                    android:layout_marginRight="@dimen/regular_margin"
                    android:textSize="@dimen/price_text_size"
                    tools:text="Example Price" />

            </LinearLayout>


            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/regular_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_plus" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginTop="@dimen/regular_margin"
                android:layout_toLeftOf="@+id/plus_button"
                android:background="@drawable/button_shape"
                android:elegantTextHeight="true"
                android:elevation="2dp"
                android:text="ADD"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

        </RelativeLayout>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_cardtoedge"
        android:layout_marginLeft="@dimen/margin_cardtoedge"
        android:layout_marginRight="@dimen/margin_cardtoedge"
        android:layout_marginStart="@dimen/margin_cardtoedge"
        android:layout_marginBottom="@dimen/regular_margin"
        android:background="@color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp"
        >


        <LinearLayout
            android:id="@+id/pop_up_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/regular_margin"
                android:alpha="1"
                android:text="@string/second_card_title"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/desctription"
                tools:text="Example text"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_cardtoedge"
                android:textColor="@color/primary_text" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
